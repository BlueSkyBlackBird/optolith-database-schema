{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "/TargetCategory.schema.json",
  "$ref": "#/definitions/TargetCategory",
  "definitions": {
    "TargetCategory": {
      "title": "Target Category",
      "type": "object",
      "properties": {
        "id": {
          "description": "The target category's identifier. An unique, increasing integer.",
          "type": "integer",
          "minimum": 1
        },
        "parent": {
          "description": "A superordinate target category, if present.",
          "type": "object",
          "properties": {
            "id": {
              "description": "The identifier of the superordinate target category.",
              "type": "integer",
              "minimum": 1
            }
          },
          "required": [
            "id"
          ],
          "additionalProperties": false
        },
        "translations": {
          "description": "All translations for the entry, identified by IETF language tag (BCP47).",
          "type": "object",
          "patternProperties": {
            "^[a-z]{2}-[A-Z]{2}$": {
              "type": "object",
              "properties": {
                "name": {
                  "description": "The target category name.",
                  "type": "string",
                  "minLength": 1
                }
              },
              "required": [
                "name"
              ],
              "additionalProperties": false
            }
          },
          "minProperties": 1,
          "additionalProperties": false
        }
      },
      "required": [
        "id",
        "translations"
      ],
      "additionalProperties": false
    }
  }
}
