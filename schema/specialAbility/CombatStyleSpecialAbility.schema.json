{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "specialAbility/CombatStyleSpecialAbility.schema.json",
  "$ref": "#/definitions/CombatStyleSpecialAbility",
  "definitions": {
    "CombatStyleSpecialAbility": {
      "title": "Combat Style Special Ability",
      "type": "object",
      "properties": {
        "id": {
          "$ref": "../_Activatable.schema.json#/definitions/Id"
        },
        "levels": {
          "$ref": "../_Activatable.schema.json#/definitions/Levels"
        },
        "usage_type": {
          "$ref": "../_Activatable.schema.json#/definitions/CombatSpecialAbilityType"
        },
        "type": {
          "description": "Is this an armed or unarmed combat style?",
          "oneOf": [
            {
              "type": "object",
              "properties": {
                "tag": {
                  "const": "Armed"
                }
              },
              "required": [
                "tag"
              ],
              "additionalProperties": false
            },
            {
              "type": "object",
              "properties": {
                "tag": {
                  "const": "Unarmed"
                }
              },
              "required": [
                "tag"
              ],
              "additionalProperties": false
            }
          ]
        },
        "select_options": {
          "$ref": "../_Activatable.schema.json#/definitions/SelectOptions"
        },
        "skill_applications": {
          "$ref": "../_Activatable.schema.json#/definitions/SkillApplications"
        },
        "skill_uses": {
          "$ref": "../_Activatable.schema.json#/definitions/SkillUses"
        },
        "maximum": {
          "$ref": "../_Activatable.schema.json#/definitions/Maximum"
        },
        "advanced": {
          "$ref": "../_Activatable.schema.json#/definitions/AdvancedSpecialAbilities"
        },
        "prerequisites": {
          "$ref": "../_Prerequisite.schema.json#/definitions/GeneralPrerequisites"
        },
        "combat_techniques": {
          "$ref": "../_Activatable.schema.json#/definitions/ApplicableCombatTechniques"
        },
        "ap_value": {
          "$ref": "../_Activatable.schema.json#/definitions/AdventurePointsValue"
        },
        "src": {
          "$ref": "../source/_PublicationRef.schema.json#/definitions/PublicationRefs"
        },
        "translations": {
          "description": "All translations for the entry, identified by IETF language tag (BCP47).",
          "type": "object",
          "patternProperties": {
            "^[a-z]{2}-[A-Z]{2}$": {
              "type": "object",
              "properties": {
                "name": {
                  "$ref": "../_Activatable.schema.json#/definitions/Name"
                },
                "name_in_library": {
                  "$ref": "../_Activatable.schema.json#/definitions/NameInLibrary"
                },
                "rules": {
                  "$ref": "../_Activatable.schema.json#/definitions/Rules"
                },
                "errata": {
                  "$ref": "../source/_Erratum.schema.json#/definitions/Errata"
                }
              },
              "required": [
                "name",
                "rules"
              ],
              "additionalProperties": false
            }
          },
          "minProperties": 1,
          "additionalProperties": false
        }
      },
      "required": [
        "id",
        "usage_type",
        "type",
        "advanced",
        "combat_techniques",
        "ap_value",
        "src",
        "translations"
      ],
      "additionalProperties": false
    }
  }
}
