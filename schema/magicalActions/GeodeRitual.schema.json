{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "magicalActions/GeodeRitual.schema.json",
  "$ref": "#/definitions/GeodeRitual",
  "definitions": {
    "GeodeRitual": {
      "title": "Geode Ritual",
      "type": "object",
      "properties": {
        "id": {
          "description": "The geode ritual's identifier. An unique, increasing integer.",
          "type": "integer",
          "minimum": 1
        },
        "check": {
          "description": "Lists the linked three attributes used to make a skill check.",
          "$ref": "../_SkillCheck.schema.json#/definitions/SkillCheck"
        },
        "parameters": {
          "description": "Measurable parameters of a geode ritual.",
          "$ref": "#/definitions/PerformanceParameters"
        },
        "target": {
          "description": "The target category – the kind of creature or object – the skill affects.",
          "$ref": "../_ActivatableSkill.schema.json#/definitions/TargetCategory/T"
        },
        "property_id": {
          "description": "The property's identifier.",
          "type": "integer",
          "minimum": 1
        },
        "prerequisites": {
          "$ref": "../_Prerequisite.schema.json#/definitions/GroupCollection/GeodeRitual"
        },
        "src": {
          "$ref": "../source/_PublicationRef.schema.json#/definitions/PublicationRefs"
        },
        "translations": {
          "description": "All translations for the entry, identified by IETF language tag (BCP47).",
          "type": "object",
          "patternProperties": {
            "^[a-z]{2}-[A-Z]{2}$": {
              "type": "object",
              "properties": {
                "name": {
                  "description": "The name of the geode ritual.",
                  "type": "string",
                  "minLength": 1
                },
                "effect": {
                  "description": "The effect description may be either a plain text or a text that is\ndivided by a list of effects for each quality level. It may also be a\nlist for each two quality levels.",
                  "$ref": "../_ActivatableSkill.schema.json#/definitions/Effect/T"
                },
                "casting_time": {
                  "type": "object",
                  "properties": {
                    "full": {
                      "type": "string"
                    },
                    "abbr": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "full",
                    "abbr"
                  ],
                  "additionalProperties": false
                },
                "cost": {
                  "type": "object",
                  "properties": {
                    "full": {
                      "type": "string"
                    },
                    "abbr": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "full",
                    "abbr"
                  ],
                  "additionalProperties": false
                },
                "range": {
                  "type": "object",
                  "properties": {
                    "full": {
                      "type": "string"
                    },
                    "abbr": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "full",
                    "abbr"
                  ],
                  "additionalProperties": false
                },
                "duration": {
                  "type": "object",
                  "properties": {
                    "full": {
                      "type": "string"
                    },
                    "abbr": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "full",
                    "abbr"
                  ],
                  "additionalProperties": false
                },
                "target": {
                  "type": "string"
                },
                "errata": {
                  "$ref": "../source/_Erratum.schema.json#/definitions/Errata"
                }
              },
              "required": [
                "name",
                "effect",
                "casting_time",
                "cost",
                "range",
                "duration",
                "target"
              ],
              "additionalProperties": false
            }
          },
          "minProperties": 1,
          "additionalProperties": false
        }
      },
      "required": [
        "id",
        "check",
        "parameters",
        "target",
        "property_id",
        "src",
        "translations"
      ],
      "additionalProperties": false
    },
    "PerformanceParameters": {
      "description": "Measurable parameters of a geode ritual.",
      "type": "object",
      "properties": {
        "casting_time": {
          "description": "The casting time.",
          "type": "object",
          "properties": {
            "value": {
              "description": "The (unitless) casting time.",
              "type": "integer",
              "minimum": 1
            },
            "unit": {
              "description": "The casting time unit.",
              "$ref": "../SkillModificationLevel.schema.json#/definitions/SlowSkillCastingTimeUnit"
            }
          },
          "required": [
            "value",
            "unit"
          ],
          "additionalProperties": false
        },
        "cost": {
          "description": "The AE cost.",
          "oneOf": [
            {
              "type": "object",
              "properties": {
                "tag": {
                  "const": "Fixed"
                },
                "value": {
                  "description": "The AE cost value.",
                  "type": "integer",
                  "minimum": 1
                }
              },
              "required": [
                "tag",
                "value"
              ],
              "additionalProperties": false
            },
            {
              "type": "object",
              "properties": {
                "tag": {
                  "const": "Map"
                },
                "map": {
                  "$ref": "../_ActivatableSkill.schema.json#/definitions/Cost/OneTime/Map"
                }
              },
              "required": [
                "tag",
                "map"
              ],
              "additionalProperties": false
            }
          ]
        },
        "range": {
          "description": "The range.",
          "oneOf": [
            {
              "type": "object",
              "properties": {
                "tag": {
                  "const": "Self"
                }
              },
              "required": [
                "tag"
              ],
              "additionalProperties": false
            },
            {
              "type": "object",
              "properties": {
                "tag": {
                  "const": "Fixed"
                },
                "value": {
                  "description": "The range in steps/m.",
                  "type": "integer",
                  "minimum": 1
                }
              },
              "required": [
                "tag",
                "value"
              ],
              "additionalProperties": false
            }
          ]
        },
        "duration": {
          "description": "The duration.",
          "oneOf": [
            {
              "type": "object",
              "properties": {
                "tag": {
                  "const": "Immediate"
                }
              },
              "required": [
                "tag"
              ],
              "additionalProperties": false
            },
            {
              "type": "object",
              "properties": {
                "tag": {
                  "const": "Fixed"
                },
                "value": {
                  "description": "The (unitless) duration.",
                  "type": "integer",
                  "minimum": 2
                },
                "unit": {
                  "description": "The duration unit.",
                  "$ref": "../_ActivatableSkill.schema.json#/definitions/Duration/Unit"
                }
              },
              "required": [
                "tag",
                "value",
                "unit"
              ],
              "additionalProperties": false
            },
            {
              "$ref": "../_ActivatableSkill.schema.json#/definitions/Duration/CheckResultBasedTagged"
            }
          ]
        }
      },
      "required": [
        "casting_time",
        "cost",
        "range",
        "duration"
      ],
      "additionalProperties": false
    }
  }
}
