{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "/magicalActions/JesterTrick.schema.json",
  "$ref": "#/$defs/JesterTrick",
  "$defs": {
    "JesterTrick": {
      "title": "Jester Trick",
      "type": "object",
      "properties": {
        "id": {
          "description": "The jester trick's identifier. An unique, increasing integer.",
          "type": "integer",
          "minimum": 1
        },
        "check": {
          "description": "Lists the linked three attributes used to make a skill check.",
          "$ref": "../_SkillCheck.schema.json#/$defs/SkillCheck"
        },
        "check_penalty": {
          "description": "In some cases, the target's Spirit or Toughness is applied as a penalty.",
          "$ref": "../_SkillCheck.schema.json#/$defs/SkillCheckPenalty"
        },
        "parameters": {
          "description": "Measurable parameters of a jester trick.",
          "$ref": "#/$defs/PerformanceParameters"
        },
        "target": {
          "description": "The target category – the kind of creature or object – the skill affects.",
          "$ref": "../_ActivatableSkillTargetCategory.schema.json#/$defs/TargetCategory"
        },
        "property_id": {
          "description": "The property's identifier.",
          "type": "integer",
          "minimum": 1
        },
        "improvement_cost": {
          "description": "States which column is used to improve the skill.",
          "$ref": "../_ImprovementCost.schema.json#/$defs/ImprovementCost"
        },
        "src": {
          "$ref": "../source/_PublicationRef.schema.json#/$defs/PublicationRefs"
        },
        "translations": {
          "description": "All translations for the entry, identified by IETF language tag (BCP47).",
          "type": "object",
          "patternProperties": {
            "^[a-z]{2}-[A-Z]{2}$": {
              "type": "object",
              "properties": {
                "name": {
                  "description": "The name of the jester trick.",
                  "type": "string",
                  "minLength": 1
                },
                "effect": {
                  "description": "The effect description may be either a plain text or a text that is\ndivided by a list of effects for each quality level. It may also be a\nlist for each two quality levels.",
                  "$ref": "../_ActivatableSkillEffect.schema.json#/$defs/Effect"
                },
                "casting_time": {
                  "type": "object",
                  "properties": {
                    "full": {
                      "type": "string"
                    },
                    "abbr": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "full",
                    "abbr"
                  ],
                  "additionalProperties": false
                },
                "cost": {
                  "type": "object",
                  "properties": {
                    "full": {
                      "type": "string"
                    },
                    "abbr": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "full",
                    "abbr"
                  ],
                  "additionalProperties": false
                },
                "range": {
                  "type": "object",
                  "properties": {
                    "full": {
                      "type": "string"
                    },
                    "abbr": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "full",
                    "abbr"
                  ],
                  "additionalProperties": false
                },
                "duration": {
                  "type": "object",
                  "properties": {
                    "full": {
                      "type": "string"
                    },
                    "abbr": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "full",
                    "abbr"
                  ],
                  "additionalProperties": false
                },
                "target": {
                  "type": "string"
                },
                "errata": {
                  "$ref": "../source/_Erratum.schema.json#/$defs/Errata"
                }
              },
              "required": [
                "name",
                "effect",
                "casting_time",
                "cost",
                "range",
                "duration",
                "target"
              ],
              "additionalProperties": false
            }
          },
          "minProperties": 1,
          "additionalProperties": false
        }
      },
      "required": [
        "id",
        "check",
        "parameters",
        "target",
        "property_id",
        "improvement_cost",
        "src",
        "translations"
      ],
      "additionalProperties": false
    },
    "PerformanceParameters": {
      "description": "Measurable parameters of a jester trick.",
      "type": "object",
      "properties": {
        "casting_time": {
          "description": "The casting time.",
          "type": "object",
          "properties": {
            "value": {
              "description": "The casting time in actions.",
              "type": "integer",
              "minimum": 1
            }
          },
          "required": [
            "value"
          ],
          "additionalProperties": false
        },
        "cost": {
          "description": "The AE cost.",
          "type": "object",
          "properties": {
            "value": {
              "description": "The AE cost value.",
              "type": "integer",
              "minimum": 1
            }
          },
          "required": [
            "value"
          ],
          "additionalProperties": false
        },
        "range": {
          "description": "The range.",
          "oneOf": [
            {
              "type": "object",
              "properties": {
                "tag": {
                  "const": "Touch"
                }
              },
              "required": [
                "tag"
              ],
              "additionalProperties": false
            },
            {
              "type": "object",
              "properties": {
                "tag": {
                  "const": "Self"
                }
              },
              "required": [
                "tag"
              ],
              "additionalProperties": false
            },
            {
              "type": "object",
              "properties": {
                "tag": {
                  "const": "Fixed"
                },
                "value": {
                  "description": "The range in steps/m.",
                  "type": "integer",
                  "minimum": 2
                }
              },
              "required": [
                "tag",
                "value"
              ],
              "additionalProperties": false
            }
          ]
        },
        "duration": {
          "description": "The duration.",
          "oneOf": [
            {
              "type": "object",
              "properties": {
                "tag": {
                  "const": "Immediate"
                }
              },
              "required": [
                "tag"
              ],
              "additionalProperties": false
            },
            {
              "type": "object",
              "properties": {
                "tag": {
                  "const": "Fixed"
                },
                "value": {
                  "description": "The (unitless) duration.",
                  "type": "integer",
                  "minimum": 2
                },
                "unit": {
                  "description": "The duration unit.",
                  "$ref": "../_ActivatableSkillDuration.schema.json#/$defs/DurationUnit"
                }
              },
              "required": [
                "tag",
                "value",
                "unit"
              ],
              "additionalProperties": false
            },
            {
              "$ref": "../_ActivatableSkillDuration.schema.json#/$defs/TaggedCheckResultBasedDuration"
            }
          ]
        }
      },
      "required": [
        "casting_time",
        "cost",
        "range",
        "duration"
      ],
      "additionalProperties": false
    }
  }
}
