{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "magicalActions/MagicalDance.schema.json",
  "$ref": "#/definitions/MagicalDance",
  "definitions": {
    "MagicalDance": {
      "title": "Magical Dance",
      "type": "object",
      "properties": {
        "id": {
          "description": "The magical dance's identifier. An unique, increasing integer.",
          "type": "integer",
          "minimum": 1
        },
        "check": {
          "description": "Lists the linked three attributes used to make a skill check.",
          "$ref": "../_SkillCheck.schema.json#/definitions/SkillCheck"
        },
        "parameters": {
          "description": "Measurable parameters of a magical dance.",
          "$ref": "#/definitions/PerformanceParameters"
        },
        "property_id": {
          "description": "The property's identifier.",
          "type": "integer",
          "minimum": 1
        },
        "music_tradition": {
          "description": "The music tradition(s) the magical dance is available for. This also defines the different names in each music tradition.",
          "type": "array",
          "items": {
            "$ref": "./_MusicTradition.schema.json#/definitions/MusicTraditionReference"
          },
          "minItems": 1
        },
        "improvement_cost": {
          "description": "States which column is used to improve the skill.",
          "$ref": "../_ImprovementCost.schema.json#/definitions/ImprovementCost"
        },
        "src": {
          "$ref": "../source/_PublicationRef.schema.json#/definitions/PublicationRefs"
        },
        "translations": {
          "description": "All translations for the entry, identified by IETF language tag (BCP47).",
          "type": "object",
          "patternProperties": {
            "^[a-z]{2}-[A-Z]{2}$": {
              "type": "object",
              "properties": {
                "name": {
                  "description": "The name of the magical dance.",
                  "type": "string",
                  "minLength": 1
                },
                "effect": {
                  "description": "The effect description may be either a plain text or a text that is divided by a list of effects for each quality level. It may also be a list for each two quality levels.",
                  "$ref": "../_ActivatableSkill.schema.json#/definitions/Effect/T"
                },
                "duration": {
                  "type": "object",
                  "properties": {
                    "full": {
                      "type": "string"
                    },
                    "abbr": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "full",
                    "abbr"
                  ],
                  "additionalProperties": false
                },
                "cost": {
                  "type": "object",
                  "properties": {
                    "full": {
                      "type": "string"
                    },
                    "abbr": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "full",
                    "abbr"
                  ],
                  "additionalProperties": false
                },
                "errata": {
                  "$ref": "../source/_Erratum.schema.json#/definitions/Errata"
                }
              },
              "required": [
                "name",
                "effect",
                "duration",
                "cost"
              ],
              "additionalProperties": false
            }
          },
          "minProperties": 1,
          "additionalProperties": false
        }
      },
      "required": [
        "id",
        "check",
        "parameters",
        "property_id",
        "music_tradition",
        "improvement_cost",
        "src",
        "translations"
      ],
      "additionalProperties": false
    },
    "PerformanceParameters": {
      "description": "Measurable parameters of a magical dance.",
      "type": "object",
      "properties": {
        "duration": {
          "type": "object",
          "properties": {
            "length": {
              "oneOf": [
                {
                  "type": "object",
                  "properties": {
                    "tag": {
                      "const": "Long"
                    }
                  },
                  "required": [
                    "tag"
                  ],
                  "additionalProperties": false
                },
                {
                  "type": "object",
                  "properties": {
                    "tag": {
                      "const": "Short"
                    }
                  },
                  "required": [
                    "tag"
                  ],
                  "additionalProperties": false
                }
              ]
            },
            "reusability": {
              "oneOf": [
                {
                  "type": "object",
                  "properties": {
                    "tag": {
                      "const": "OneTime"
                    }
                  },
                  "required": [
                    "tag"
                  ],
                  "additionalProperties": false
                },
                {
                  "type": "object",
                  "properties": {
                    "tag": {
                      "const": "Sustainable"
                    }
                  },
                  "required": [
                    "tag"
                  ],
                  "additionalProperties": false
                }
              ]
            }
          },
          "required": [
            "length",
            "reusability"
          ],
          "additionalProperties": false
        },
        "cost": {
          "oneOf": [
            {
              "type": "object",
              "properties": {
                "tag": {
                  "const": "Flat"
                },
                "temporary": {
                  "description": "The (temporary) AE cost value.",
                  "type": "integer",
                  "minimum": 1
                },
                "translations": {
                  "description": "All translations for the entry, identified by IETF language tag (BCP47).",
                  "type": "object",
                  "patternProperties": {
                    "^[a-z]{2}-[A-Z]{2}$": {
                      "type": "object",
                      "properties": {
                        "per": {
                          "description": "The cost have to be per a specific countable entity, e.g. `8 AE per person`.",
                          "type": "object",
                          "properties": {
                            "default": {
                              "description": "The full countable entity name.",
                              "type": "string",
                              "minLength": 1
                            },
                            "compressed": {
                              "description": "The compressed countable entity name.",
                              "type": "string",
                              "minLength": 1
                            }
                          },
                          "required": [
                            "default",
                            "compressed"
                          ],
                          "additionalProperties": false
                        }
                      },
                      "required": [],
                      "minProperties": 1,
                      "additionalProperties": false
                    }
                  },
                  "minProperties": 1,
                  "additionalProperties": false
                }
              },
              "required": [
                "tag",
                "temporary"
              ],
              "additionalProperties": false
            },
            {
              "type": "object",
              "properties": {
                "tag": {
                  "const": "Indefinite"
                },
                "multiply": {
                  "description": "Specified if the indefinite description's result value is to be multiplied by a certain number.",
                  "type": "integer",
                  "minimum": 2
                },
                "translations": {
                  "description": "All translations for the entry, identified by IETF language tag (BCP47).",
                  "type": "object",
                  "patternProperties": {
                    "^[a-z]{2}-[A-Z]{2}$": {
                      "type": "object",
                      "properties": {
                        "description": {
                          "description": "A description of the duration.",
                          "type": "object",
                          "properties": {
                            "default": {
                              "description": "The full description of the duration.",
                              "type": "string",
                              "minLength": 1
                            },
                            "compressed": {
                              "description": "A compressed description of the duration for use in small areas (e.g. on character sheet).",
                              "type": "string",
                              "minLength": 1
                            }
                          },
                          "required": [
                            "default",
                            "compressed"
                          ],
                          "additionalProperties": false
                        }
                      },
                      "required": [
                        "description"
                      ],
                      "additionalProperties": false
                    }
                  },
                  "minProperties": 1,
                  "additionalProperties": false
                }
              },
              "required": [
                "tag",
                "translations"
              ],
              "additionalProperties": false
            }
          ]
        }
      },
      "required": [
        "duration",
        "cost"
      ],
      "additionalProperties": false
    }
  }
}
