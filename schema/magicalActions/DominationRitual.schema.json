{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "/magicalActions/DominationRitual.schema.json",
  "$ref": "#/$defs/DominationRitual",
  "$defs": {
    "DominationRitual": {
      "title": "Domination Ritual",
      "type": "object",
      "properties": {
        "id": {
          "description": "The domination ritual's identifier. An unique, increasing integer.",
          "type": "integer",
          "minimum": 1
        },
        "check": {
          "description": "Lists the linked three attributes used to make a skill check.",
          "$ref": "../_SkillCheck.schema.json#/$defs/SkillCheck"
        },
        "check_penalty": {
          "description": "In some cases, the target's Spirit or Toughness is applied as a penalty.",
          "$ref": "../_SkillCheck.schema.json#/$defs/SkillCheckPenalty"
        },
        "parameters": {
          "description": "Measurable parameters of a curse.",
          "$ref": "#/$defs/PerformanceParameters"
        },
        "property_id": {
          "description": "The property's identifier.",
          "type": "integer",
          "minimum": 1
        },
        "src": {
          "$ref": "../source/_PublicationRef.schema.json#/$defs/PublicationRefs"
        },
        "translations": {
          "description": "All translations for the entry, identified by IETF language tag (BCP47).",
          "type": "object",
          "patternProperties": {
            "^[a-z]{2}-[A-Z]{2}$": {
              "type": "object",
              "properties": {
                "name": {
                  "description": "The name of the domination ritual.",
                  "type": "string",
                  "minLength": 1
                },
                "effect": {
                  "description": "The effect description may be either a plain text or a text that is\ndivided by a list of effects for each quality level. It may also be a\nlist for each two quality levels.",
                  "$ref": "../_ActivatableSkillEffect.schema.json#/$defs/Effect"
                },
                "cost": {
                  "type": "object",
                  "properties": {
                    "full": {
                      "type": "string"
                    },
                    "abbr": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "full",
                    "abbr"
                  ],
                  "additionalProperties": false
                },
                "duration": {
                  "type": "object",
                  "properties": {
                    "full": {
                      "type": "string"
                    },
                    "abbr": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "full",
                    "abbr"
                  ],
                  "additionalProperties": false
                },
                "errata": {
                  "$ref": "../source/_Erratum.schema.json#/$defs/Errata"
                }
              },
              "required": [
                "name",
                "effect",
                "cost",
                "duration"
              ],
              "additionalProperties": false
            }
          },
          "minProperties": 1,
          "additionalProperties": false
        }
      },
      "required": [
        "id",
        "check",
        "parameters",
        "property_id",
        "src",
        "translations"
      ],
      "additionalProperties": false
    },
    "PerformanceParameters": {
      "description": "Measurable parameters of a curse.",
      "type": "object",
      "properties": {
        "cost": {
          "description": "The AE cost.",
          "type": "object",
          "properties": {
            "initial_modification_level": {
              "description": "The initial skill modification identifier/level.",
              "type": "integer",
              "maximum": 6,
              "minimum": 1
            },
            "translations": {
              "description": "All translations for the entry, identified by IETF language tag (BCP47).",
              "type": "object",
              "patternProperties": {
                "^[a-z]{2}-[A-Z]{2}$": {
                  "type": "object",
                  "properties": {
                    "additional": {
                      "description": "AE cost in addition to the normal AE cost.",
                      "type": "object",
                      "properties": {
                        "default": {
                          "description": "The full description of where the cost come from.",
                          "type": "string",
                          "minLength": 1
                        },
                        "compressed": {
                          "description": "A compressed description of where the cost come from for use in\nsmall areas (e.g. on character sheet).",
                          "type": "string",
                          "minLength": 1
                        }
                      },
                      "required": [
                        "default",
                        "compressed"
                      ],
                      "additionalProperties": false
                    }
                  },
                  "required": [],
                  "minProperties": 1,
                  "additionalProperties": false
                }
              },
              "minProperties": 1,
              "additionalProperties": false
            }
          },
          "required": [
            "initial_modification_level"
          ],
          "additionalProperties": false
        },
        "duration": {
          "description": "The duration.",
          "oneOf": [
            {
              "type": "object",
              "properties": {
                "tag": {
                  "const": "Fixed"
                },
                "value": {
                  "description": "The (unitless) duration value.",
                  "type": "integer",
                  "minimum": 1
                },
                "unit": {
                  "description": "The unit of the `value`.",
                  "$ref": "../_ActivatableSkillDuration.schema.json#/$defs/DurationUnit"
                }
              },
              "required": [
                "tag",
                "value",
                "unit"
              ],
              "additionalProperties": false
            },
            {
              "$ref": "../_ActivatableSkillDuration.schema.json#/$defs/TaggedCheckResultBasedDuration"
            },
            {
              "type": "object",
              "properties": {
                "tag": {
                  "const": "Indefinite"
                },
                "maximum": {
                  "description": "Specified if the duration has a maximum time span.",
                  "oneOf": [
                    {
                      "type": "object",
                      "properties": {
                        "tag": {
                          "const": "Fixed"
                        },
                        "value": {
                          "description": "The (unitless) maximum duration value.",
                          "type": "integer",
                          "minimum": 1
                        },
                        "unit": {
                          "description": "The unit of the `value`.",
                          "$ref": "../_ActivatableSkillDuration.schema.json#/$defs/DurationUnit"
                        }
                      },
                      "required": [
                        "tag",
                        "value",
                        "unit"
                      ],
                      "additionalProperties": false
                    },
                    {
                      "$ref": "../_ActivatableSkillDuration.schema.json#/$defs/TaggedCheckResultBasedDuration"
                    }
                  ]
                },
                "translations": {
                  "description": "All translations for the entry, identified by IETF language tag (BCP47).",
                  "type": "object",
                  "patternProperties": {
                    "^[a-z]{2}-[A-Z]{2}$": {
                      "type": "object",
                      "properties": {
                        "description": {
                          "description": "A description of the duration.",
                          "type": "object",
                          "properties": {
                            "default": {
                              "description": "The full description of the duration.",
                              "type": "string",
                              "minLength": 1
                            },
                            "compressed": {
                              "description": "A compressed description of the duration for use in small areas\n(e.g. on character sheet).",
                              "type": "string",
                              "minLength": 1
                            }
                          },
                          "required": [
                            "default",
                            "compressed"
                          ],
                          "additionalProperties": false
                        }
                      },
                      "required": [
                        "description"
                      ],
                      "additionalProperties": false
                    }
                  },
                  "minProperties": 1,
                  "additionalProperties": false
                }
              },
              "required": [
                "tag",
                "translations"
              ],
              "additionalProperties": false
            }
          ]
        }
      },
      "required": [
        "cost",
        "duration"
      ],
      "additionalProperties": false
    }
  }
}
