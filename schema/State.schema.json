{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "schema/State.schema.json",
  "$ref": "#/definitions/State",
  "definitions": {
    "State": {
      "title": "State",
      "type": "object",
      "properties": {
        "id": {
          "description": "An unique, increasing integer.",
          "type": "integer",
          "minimum": 1
        },
        "src": {
          "$ref": "./_PublicationRef.schema.json#/definitions/PublicationRefs"
        },
        "translations": {
          "description": "All translations for the entry, identified by IETF language tag (BCP47).",
          "type": "object",
          "patternProperties": {
            "^[a-z]{2}-[A-Z]{2}$": {
              "$ref": "#/definitions/Translation"
            }
          },
          "minProperties": 1,
          "additionalProperties": false
        }
      },
      "required": [
        "id",
        "src",
        "translations"
      ],
      "additionalProperties": false
    },
    "Translation": {
      "type": "object",
      "properties": {
        "name": {
          "description": "The name of the state.",
          "type": "string",
          "minLength": 1
        },
        "description": {
          "description": "The description of the state.",
          "type": "string",
          "minLength": 1
        },
        "errata": {
          "$ref": "./_Erratum.schema.json#/definitions/Errata"
        }
      },
      "required": [
        "name",
        "description"
      ],
      "additionalProperties": false
    }
  }
}
