{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "/rule/CoreRule.schema.json",
  "$ref": "#/$defs/CoreRule",
  "$defs": {
    "CoreRule": {
      "title": "Core Rule",
      "type": "object",
      "properties": {
        "id": {
          "description": "The core rule's identifier. An unique, increasing integer.",
          "type": "integer",
          "minimum": 1
        },
        "content": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/ContentNode"
          },
          "minItems": 1
        },
        "src": {
          "$ref": "../source/_PublicationRef.schema.json#/$defs/PublicationRefs"
        },
        "translations": {
          "description": "All translations for the entry, identified by IETF language tag (BCP47).",
          "type": "object",
          "patternProperties": {
            "^[a-z]{2}-[A-Z]{2}$": {
              "$ref": "#/$defs/CoreRuleTranslation"
            }
          },
          "minProperties": 1,
          "additionalProperties": false
        }
      },
      "required": [
        "id",
        "content",
        "src",
        "translations"
      ],
      "additionalProperties": false
    },
    "CoreRuleTranslation": {
      "type": "object",
      "properties": {
        "name": {
          "description": "The name of the optional rule.",
          "$ref": "../_NonEmptyString.schema.json#/$defs/NonEmptyString"
        },
        "errata": {
          "$ref": "../source/_Erratum.schema.json#/$defs/Errata"
        }
      },
      "required": [
        "name"
      ],
      "additionalProperties": false
    },
    "ContentNode": {
      "oneOf": [
        {
          "type": "object",
          "properties": {
            "tag": {
              "const": "Child"
            },
            "child": {
              "$ref": "#/$defs/ChildNode"
            }
          },
          "required": [
            "tag",
            "child"
          ],
          "additionalProperties": false
        },
        {
          "type": "object",
          "properties": {
            "tag": {
              "const": "Text"
            },
            "text": {
              "$ref": "#/$defs/TextNode"
            }
          },
          "required": [
            "tag",
            "text"
          ],
          "additionalProperties": false
        },
        {
          "type": "object",
          "properties": {
            "tag": {
              "const": "Reference"
            },
            "reference": {
              "$ref": "#/$defs/ReferenceNode"
            }
          },
          "required": [
            "tag",
            "reference"
          ],
          "additionalProperties": false
        },
        {
          "type": "object",
          "properties": {
            "tag": {
              "const": "ReferenceList"
            },
            "reference_list": {
              "$ref": "#/$defs/ReferenceListNode"
            }
          },
          "required": [
            "tag",
            "reference_list"
          ],
          "additionalProperties": false
        }
      ]
    },
    "ChildNode": {
      "description": "A core rule nested inside this core rule. It may be displayed as a separate\npage or its content may be included in this rule's text, which will\nautomatically generate a proper heading. No content node of a type other than\n`Child` should follow a child node, since then it may look like the the text\nmay be part of the child node.",
      "type": "object",
      "properties": {
        "id": {
          "description": "The nested core rule's identifier.",
          "type": "integer",
          "minimum": 1
        },
        "include": {
          "description": "If the nested core rule's content should be integrated into this core rule\nand a proper heading should be added. Otherwise create a link to a separate\nview of that core rule.",
          "type": "boolean"
        }
      },
      "required": [
        "id",
        "include"
      ],
      "additionalProperties": false
    },
    "TextNode": {
      "description": "A simple text block, containing one or multiple paragraphs. Headings are not\nallowed, they should be handled as nested core rules instead.",
      "type": "object",
      "properties": {
        "translations": {
          "description": "All translations for the entry, identified by IETF language tag (BCP47).",
          "type": "object",
          "patternProperties": {
            "^[a-z]{2}-[A-Z]{2}$": {
              "$ref": "#/$defs/TextNodeTranslation"
            }
          },
          "minProperties": 1,
          "additionalProperties": false
        }
      },
      "required": [
        "translations"
      ],
      "additionalProperties": false
    },
    "TextNodeTranslation": {
      "type": "object",
      "properties": {
        "text": {
          "description": "Markdown-formatted text.",
          "$ref": "../_NonEmptyString.schema.json#/$defs/NonEmptyMarkdown"
        }
      },
      "required": [
        "text"
      ],
      "additionalProperties": false
    },
    "ReferenceListNode": {
