      "type": "object",
      "properties": {
        "id": {
          "description": "The core rule's identifier. An unique, increasing integer.",
          "type": "integer",
          "minimum": 1
        },
        "content": {
          "type": "array",
          "items": {
            "oneOf": [
              {
                "$ref": "#/definitions/ChildNode"
              },
              {
                "$ref": "#/definitions/TextNode"
              },
              {
                "$ref": "#/definitions/ReferenceNode"
              },
