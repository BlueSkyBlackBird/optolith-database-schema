{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "SkillModificationIncrement.schema.json",
  "$ref": "#/definitions/SkillModificationIncrement",
  "definitions": {
    "SkillModificationIncrement": {
      "title": "Skill Modification Increment",
      "type": "object",
      "properties": {
        "id": {
          "description": "The skill modification increment's identifier. It also represents the increment level.",
          "type": "integer",
          "maximum": 6,
          "minimum": 1
        },
        "fast": {
          "description": "Configuration for this level for fast skills (spells, liturgical chants).",
          "$ref": "#/definitions/LevelTypeConfig"
        },
        "slow": {
          "description": "Configuration for this level for slow skills (rituals, ceremonies).",
          "$ref": "#/definitions/LevelTypeConfig"
        },
        "translations": {
          "description": "All translations for the entry, identified by IETF language tag (BCP47).",
          "type": "object",
          "patternProperties": {
            "^[a-z]{2}-[A-Z]{2}$": {
              "type": "object",
              "properties": {
                "fast": {
                  "description": "Configuration for this level for fast skills (spells, liturgical chants). Values set here override the default generated text.",
                  "$ref": "#/definitions/LevelTypeConfigTranslation"
                },
                "slow": {
                  "description": "Configuration for this level for slow skills (rituals, ceremonies). Values set here override the default generated text.",
                  "$ref": "#/definitions/LevelTypeConfigTranslation"
                }
              },
              "required": [],
              "minProperties": 1,
              "additionalProperties": false
            }
          },
          "minProperties": 1,
          "additionalProperties": false
        }
      },
      "required": [
        "id",
        "fast",
        "slow"
      ],
      "additionalProperties": false
    },
    "LevelTypeConfig": {
      "description": "Configuration of a type for a level.",
      "type": "object",
      "properties": {
        "casting_time": {
          "description": "Casting time in actions.",
          "type": "integer",
          "minimum": 1
        },
        "range": {
          "description": "Range in meters.",
          "type": "integer",
          "minimum": 1
        },
        "cost": {
          "description": "Cost in AE/KP.",
          "type": "integer",
          "minimum": 1
        }
      },
      "required": [
        "casting_time",
        "range",
        "cost"
      ],
      "additionalProperties": false
    },
    "LevelTypeConfigTranslation": {
      "description": "Configuration translation of a type for a level. Values set here override the default generated text.",
      "type": "object",
      "properties": {
        "range": {
          "type": "string",
          "minLength": 1
        }
      },
      "required": [
        "range"
      ],
      "additionalProperties": false
    }
  }
}
