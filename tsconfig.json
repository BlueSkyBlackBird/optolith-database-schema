{
  "include": [
    "src/**/*"
  ],
  "compilerOptions": {
    "strict": true,
    "lib": ["ESNext"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ESNext",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "declaration": true,
    "outDir": "lib",
    "rootDir": "src"

  }
}
